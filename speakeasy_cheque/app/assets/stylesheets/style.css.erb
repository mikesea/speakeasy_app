.column { border-radius: 5px; }

#wrap{
  width:980px;
  background: white; /* The Fallback */
  background: rgba(58, 58, 58, 0.5); 
  margin: 40px auto 30px auto;
  padding: 10px;
  border:1px solid #000;
  border-radius: 5px;
}

ul { border-radius: 3px; }

.header, .totals, .kpis {
  background-color: black;
  color: white;
}

.col_12 h3 { font-family: "Trebuchet Ms", helvetica, sans-serif; }

.col_12 h3, .col_2 h2, .col_2 h6, .col_3 h2, .col_3 h6 { text-shadow: 2px 2px 3px rgba(0,0,0,0.1); }

h3.inner { margin: 0; }

.stats { text-align: center; }

.col_3.align h6 { color: #F4F4F4; text-shadow: 2px 4px 3px rgba(0,0,0,0.3); }

.totals { margin-top: 5px; }

.kpis { margin-top: 5px; }

.align .inner { padding: 0; }

.col_9 .inner { padding: 10px 0px 10px 10px;}

#chart {
  margin: 15px 0px 5px;
  background-color: black;
  padding: 10px;
  width: 688px;
  height: 420px;
  border-radius: 5px;
}

.col_9 .col_7 { margin: 0 130px; }

