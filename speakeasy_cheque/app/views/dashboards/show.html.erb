<span id="created_messages">
  <%= pluralize(@total_messages, "Message") %>
  <%= pluralize(@total_rooms, "Room") %>
  <%= pluralize(@total_users, "User") %>
</span>
<br>
<table>
  <tr>
    <th></th>
    <th>Current</th>
    <th>Trending</th>
  </tr>
  <tr>
    <td>Users Per Day</td>
    <td><%= @recent_users_per_day %></td>
    <td><%= @recent_users_per_day > @historical_users_per_day ? "Up" : "Down" %></td>
  </tr>
  <tr>
    <td>Users creating rooms</td>
    <td><%= @all_percent_users_creating_room %>%</td>
    <td><%= @all_percent_users_creating_room > @historical_percent_users_creating_room ? "Up" : "Down" %></td>
  </tr>
</table>




Numerator
<%= link_to "Clear", dashboard_path() %>
<%= link_to "Created Messages", dashboard_path(num: "created_messages", denom: params[:denom], x_axis: params[:x_axis]) %>
<%= link_to "Created Rooms", dashboard_path(num: "created_rooms", denom: params[:denom], x_axis: params[:x_axis]) %>
<%= link_to "User Sign-Ups", dashboard_path(num: "created_users", denom: params[:denom], x_axis: params[:x_axis]) %>
<%= link_to "Room Invites", dashboard_path(num: "created_permissions", denom: params[:denom], x_axis: params[:x_axis]) %>
<br>
Denominator
<%= link_to "Clear", dashboard_path() %>
<%= link_to "Created Messages", dashboard_path(num: "created_messages", denom: "created_messages", x_axis: params[:x_axis]) %>
<%= link_to "Created Rooms", dashboard_path(num: params[:num], denom: "created_rooms", x_axis: params[:x_axis]) %>
<%= link_to "User Sign-Ups", dashboard_path(num: params[:num], denom: "created_users", x_axis: params[:x_axis]) %>
<%= link_to "Room Invites", dashboard_path(num: params[:num], denom: "created_permissions", x_axis: params[:x_axis]) %>


<div id="chart" style="width: 560px; height: 300px;"></div>

<%= link_to "Day", dashboard_path(x_axis: "day", num: params[:num], denom: params[:denom]) %>
<%= link_to "Week", dashboard_path(x_axis: "week", num: params[:num], denom: params[:denom]) %>
<%= link_to "Month", dashboard_path(x_axis: "month", num: params[:num], denom: params[:denom]) %>
<%= link_to "All Time", dashboard_path(x_axis: "all", num: params[:num], denom: params[:denom]) %>


<script type="text/javascript" charset="utf-8">
 $(function () {
    new Highcharts.Chart({
      chart: { renderTo: 'chart' },
      title: { text: '<%= @chart_title %>' },
      xAxis: { type: 'datetime' },
      yAxis: { text: '<%= @chart_title %>' },
      series: [{
                name: "<%= @chart_title %>",
                pointInterval: <%= @point_interval %>,
                pointStart: <%= @point_start %>,
                data: <%= @series %>
              }]
    });
  });
</script>
