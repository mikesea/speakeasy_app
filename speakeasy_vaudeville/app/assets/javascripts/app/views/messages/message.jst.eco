<li class="item">
  <% if @message.plain: %>
    <%= @message.body %>
  <% else: %>
    <div class="author-image"><img src="/api/users/gravatar/<%= @message.sid %>"></img></div>
    <div class="author-body">
      <span class="author-name"><%= @message.username %></span>
      <span class="body"><%= @message.body %></span>
    </div>
  <% end %>
</li>
